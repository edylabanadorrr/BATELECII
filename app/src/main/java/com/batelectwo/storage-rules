rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  // Files look like: DisplayPictures/<UID>/pic.jpg
    match /DisplayPictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  // Files look like: DisplayPictures/<UID>/pic.jpg
    match /DisplayPictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}