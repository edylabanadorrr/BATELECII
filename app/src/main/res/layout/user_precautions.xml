<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context="com.batelectwo.UserPrecautions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

    <!-- Head -->

    <TextView
        android:id="@+id/cooperative_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cooperative_name"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#a08b15"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:layout_marginTop="20dp"
        android:padding="20dp">

    <TextView
        android:id="@+id/textViewHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precautions"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/sage_green"/>

        <TextView
            android:id="@+id/textViewPrecautions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wear_appropriate_gear_when_working_on_electrical_systems_wear_appropriate_personal_protective_equipment_ppe"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textViewHead"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/keep_flammable_materials_away_store_flammable_materials_e_g_paper_cloth_away_from_electrical_equipment_to_reduce_the_risk_of_fires"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions2"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/properly_grounded_outlets_ensure_that_outlets_are_properly_grounded_and_have_covers_if_they_are_in_potentially_damp_locations"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions2"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions3"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions3"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avoid_diy_electrical_work_for_complex_electrical_tasks_hire_a_qualified_electrician_diy_electrical_work_can_be_dangerous_if_not_done_correctly"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions3"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions4"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions4"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/don_t_overload_circuits_avoid_overloading_outlets_or_power_strips_with_too_many_devices_which_can_lead_to_overheating_and_fires"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions4"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions5"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions5"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_proper_extension_cords_ensure_extension_cords_are_rated_for_the_appliances_they_re_connected_to_and_don_t_use_them_as_a_permanent_solution"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions5"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

        <View
            android:id="@+id/dividerPrecautions6"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewPrecautions6"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPrecautions7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turn_off_power_before_working_on_any_electrical_circuit_or_equipment_turn_off_the_power_at_the_source_use_lockout_tagout_procedures_when_necessary"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dividerPrecautions6"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:padding="10dp"/>

    </RelativeLayout>
    </LinearLayout>

</ScrollView>