<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context="com.batelectwo.AdminConsumers">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context="com.batelectwo.AdminConsumers"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

        <!-- Head -->

        <TextView
            android:id="@+id/cooperative_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cooperative_name"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#a08b15"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:id="@+id/relativeLayoutConsumerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewSearch"
                android:layout_width="400dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:hint="Search..."
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:drawableStart="@drawable/baseline_search_24"
                android:paddingStart="16dp"
                android:drawablePadding="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:completionThreshold="1">
            </AutoCompleteTextView>

            <!-- Image View for Profile Picture -->

            <ImageView
                android:id="@+id/imageViewProfileDp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/autoCompleteTextViewSearch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/no_profile_pic" />

            <!-- Account Number -->

            <ImageView
                android:id="@+id/imageViewAccountNumber"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/imageViewProfileDp"
                android:background="@drawable/account_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:fontFamily="@font/poppinsmedium"
                android:layout_alignEnd="@id/dividerAccountNumber"
                android:layout_below="@id/imageViewAccountNumber">

            </TextView>

            <TextView
                android:id="@+id/textViewShowAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignStart="@id/imageViewAccountNumber"
                android:layout_below="@id/imageViewProfileDp"
                android:hint="@string/userprofile_no_data"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textViewShowAccountNumber"
                android:background="@android:color/darker_gray" />

            <!-- First Name -->

            <ImageView
                android:id="@+id/icFirstName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_person_24"
                android:layout_below="@id/dividerAccountNumber"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icFirstName"
                android:hint="First Name"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:layout_below="@id/dividerAccountNumber"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerFirstName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextFirstName"
                android:background="@android:color/darker_gray" />


            <!-- Last Name -->

            <ImageView
                android:id="@+id/icLastName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/baseline_person_24"
                android:layout_below="@id/dividerFirstName"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icLastName"
                android:hint="Last Name"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerFirstName"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerLastName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextLastName"
                android:background="@android:color/darker_gray" />

            <!-- Bill -->

            <ImageView
                android:id="@+id/icBill"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_bill_24"
                android:layout_below="@id/dividerLastName"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icBill"
                android:hint="Bill"
                android:inputType="numberDecimal"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerLastName"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerBill"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextBill"
                android:background="@android:color/darker_gray" />

            <!-- Address -->

            <ImageView
                android:id="@+id/icAddress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_address"
                android:layout_below="@id/dividerBill"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icAddress"
                android:hint="Address"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerBill"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerAddress"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextAddress"
                android:background="@android:color/darker_gray" />

            <!-- Contact Number -->

            <ImageView
                android:id="@+id/icContactNumber"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_call_24"
                android:layout_below="@id/dividerAddress"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icContactNumber"
                android:hint="Contact Number"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerAddress"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerContactNumber"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextContactNumber"
                android:background="@android:color/darker_gray" />

            <!-- Username -->

            <ImageView
                android:id="@+id/icUsername"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_username"
                android:layout_below="@id/dividerContactNumber"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/icUsername"
                android:hint="Username"
                android:background="@color/light_gray"
                android:drawablePadding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerContactNumber"
                android:textSize="18sp"/>

            <View
                android:id="@+id/dividerUsername"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textInputEditTextUsername"
                android:background="@android:color/darker_gray" />

            <!-- Receipt -->

            <ImageView
                android:id="@+id/icInvoice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/file_invoice"
                android:layout_below="@id/dividerUsername"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textViewInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice"
                android:layout_alignStart="@id/icInvoice"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dividerUsername"
                android:textSize="18sp">

            </TextView>

            <!-- Image View for Invoice -->

            <ImageView
                android:id="@+id/imageViewInvoice"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@id/textViewInvoice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/no_receipt" />

            <!-- Image View for Invoice -->

            <ImageView
                android:id="@+id/imageViewUploadedInvoice"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@id/textViewInvoice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/uploadInvoiceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewUploadedInvoice"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="Upload File">

            </Button>

            <!-- Button for adding consumer -->

            <Button
                android:id="@+id/addConsumerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Consumer"
                android:layout_below="@id/uploadInvoiceButton"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/sage_green"/>

            <!-- Button for updating consumer -->

            <Button
                android:id="@+id/updateConsumerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Consumer"
                android:layout_below="@id/addConsumerButton"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/sage_green"/>

            <!-- Button for clearing consumer's info -->

            <Button
                android:id="@+id/clearConsumerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear Consumer Info"
                android:layout_below="@id/updateConsumerButton"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/sage_green"/>

            <!-- Button for delete consumer

            <Button
                android:id="@+id/deleteConsumerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Consumer"
                android:layout_below="@id/clearConsumerButton"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/maroon"/> -->

            <!-- Progress Bar -->

            <ProgressBar
                android:id="@+id/progressBarShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation View -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/admin_bottom_nav" />

</RelativeLayout>