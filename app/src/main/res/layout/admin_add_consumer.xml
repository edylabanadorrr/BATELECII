<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.batelectwo.AddConsumer"
    android:padding="30dp"
    android:scrollbarStyle="outsideOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cooperative Name -->

        <TextView
            android:id="@+id/cooperative_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="@string/cooperative_name"
            android:textColor="@color/olive_green"
            android:textSize="30sp" />

        <!-- First Name -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_firstname"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="@string/first_name"
            android:layout_below="@id/cooperative_name"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Last Name -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_lastname"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="@string/last_name"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_below="@id/input_firstname"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Email -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="@string/email_address"
            android:layout_below="@id/input_lastname"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Contact Number -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_contactnumber"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="@string/contact_number"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="10dp"
            android:layout_below="@id/input_email"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Address -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_address"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="@string/address"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_below="@id/input_contactnumber"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Username -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_username"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:hint="@string/username"
            android:layout_below="@id/input_address"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/gray2"
            android:textColorHint="@color/blurryblack" />

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_username"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="@string/password"
                android:layout_marginTop="530dp"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_username"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cooperative_name"
            android:layout_marginTop="570dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="@string/confirm_password"
                android:layout_marginTop="40dp"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/blurryblack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_password" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Progress Bar -->

        <ProgressBar
            android:id="@+id/progressBarShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="100dp"
            android:elevation="10dp"
            android:visibility="gone" />

        <!-- Add Consumer -->

        <Button
            android:id="@+id/addConsumerButton"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="700dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="ADD CONSUMER"
            android:backgroundTint="@color/sage_green"
            android:textAllCaps="false" />

    </RelativeLayout>
</ScrollView>