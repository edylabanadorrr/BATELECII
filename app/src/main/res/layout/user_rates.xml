<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context="com.batelectwo.UserRates">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/gradient_login">

        <!-- Title -->

        <TextView
            android:id="@+id/cooperative_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginStart="170dp"
            android:text="@string/cooperative_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/olive_green"
            android:textSize="30sp">

        </TextView>

        <!-- Image View for September Rate -->

        <ImageView
            android:id="@+id/imageViewSeptemberRate"
            android:layout_width="650dp"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/cooperative_name"
            android:background="@drawable/september_rates">

        </ImageView>

        <!-- Image View for September Rate -->

        <ImageView
            android:id="@+id/imageViewAugustRate"
            android:layout_width="650dp"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/imageViewSeptemberRate"
            android:background="@drawable/rate_august_2023"/>

    </RelativeLayout>
    </ScrollView>
</HorizontalScrollView>
