<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context="com.batelectwo.UserMainOffice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- Head -->

        <TextView
            android:id="@+id/cooperative_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cooperative_name"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#a08b15"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="20dp"
            android:padding="20dp">

        <!-- Text View of Main Office -->

        <TextView
            android:id="@+id/textViewMainOffice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Office"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/olive_green">

        </TextView>

            <!-- Text View of Antipolo -->

            <TextView
                android:id="@+id/textViewAntipolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antipolo Del Norte, Lipa City, Batangas"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewMainOffice"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Telefax -->

            <TextView
                android:id="@+id/textViewTelefax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefax"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewAntipolo"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Mobile -->

            <TextView
                android:id="@+id/textViewMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewTelefax"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Email -->

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewMobile"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>