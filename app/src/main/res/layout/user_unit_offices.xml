                android:id="@+id/textViewMalvarLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. Leviste St. cor. J. Lantin, Poblacion, Malvar, Batangas"
                android:layout_below="@id/textViewMalvar"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Malvar Unit Office's Tel Number -->

            <TextView
                android:id="@+id/textViewMalvarNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/malvar_telnumber"
                android:layout_below="@id/textViewMalvarLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Malvar and Talisay -->

            <View
                android:id="@+id/dividerMalvar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewMalvarNumber"
                android:background="@android:color/darker_gray" />

            <!-- Text View of Talisay Unit Office -->

            <TextView
                android:id="@+id/textViewTalisay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
