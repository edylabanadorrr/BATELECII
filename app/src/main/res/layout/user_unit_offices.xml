            <!-- Text View of Mabini Unit Office's Telephone Number -->

            <TextView
                android:id="@+id/textViewMabiniNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mabini_telnumber"
                android:layout_below="@id/textViewMabiniLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Mabini and Tingloy -->

            <View
                android:id="@+id/dividerMabini"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewMabiniNumber"
                android:background="@android:color/darker_gray" />

            <!-- Text View of Tingloy Unit Office -->

            <TextView
                android:id="@+id/textViewTingloy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tingloy_unit_office"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dividerMabini"
                android:textColor="@color/sage_green"
                android:fontFamily="@font/poppinsbold"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Tingloy Unit Office's Location -->

            <TextView
                android:id="@+id/textViewTingloyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
