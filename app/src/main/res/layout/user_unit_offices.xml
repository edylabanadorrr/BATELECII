            </TextView>

            <!-- Text View of San Juan Unit Office's Telefax Number -->

            <TextView
                android:id="@+id/textViewSanJuanTelefax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sanjuan_telefax"
                android:layout_below="@id/textViewSanJuanNumber"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides San Juan and Taysan -->

            <View
                android:id="@+id/dividerSanJuan"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
