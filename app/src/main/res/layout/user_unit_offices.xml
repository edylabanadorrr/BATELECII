                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Taysan Unit Office's Celephone Number -->

            <TextView
                android:id="@+id/textViewTaysanNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taysan_celnumber"
                android:layout_below="@id/textViewTaysanLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

