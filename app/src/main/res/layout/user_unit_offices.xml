                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Lobo Unit Office's Celephone Number -->

            <TextView
                android:id="@+id/textViewLoboNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lobo_celnumber"
                android:layout_below="@id/textViewLoboLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Lobo and Padre Garcia -->

            <View
                android:id="@+id/dividerLobo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewLoboNumber"
                android:background="@android:color/darker_gray" />

            <!-- Text View of Padre Garcia Unit Office -->

            <TextView
                android:id="@+id/textViewPadreGarcia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/padre_garcia_unit_office"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dividerLobo"
                android:textColor="@color/sage_green"
                android:fontFamily="@font/poppinsbold"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Padre Garcia Unit Office's Location -->

            <TextView
                android:id="@+id/textViewPadreGarciaLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market Site Poblacion, Padre Garcia, Batangas"
                android:layout_below="@id/textViewPadreGarcia"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Padre Garcia Unit Office's Tel Number -->

            <TextView
                android:id="@+id/textViewPadreGarciaNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/padregarcia_telnumber"
                android:layout_below="@id/textViewPadreGarciaLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Padre Garcia and Malvar -->

            <View
                android:id="@+id/dividerPadreGarcia"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewPadreGarciaNumber"
                android:background="@android:color/darker_gray" />

            <!-- Text View of Malvar Unit Office -->

            <TextView
                android:id="@+id/textViewMalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
