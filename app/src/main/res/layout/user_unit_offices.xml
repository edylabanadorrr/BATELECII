<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context="com.batelectwo.UserUnitOffices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

    <!-- Head -->

    <TextView
        android:id="@+id/cooperative_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cooperative_name"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#a08b15"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="20dp"
            android:padding="20dp">

        <!-- Text View of Unit Office -->

        <TextView
            android:id="@+id/textViewUnitOffices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit Offices"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/olive_green">

        </TextView>

        <!-- Text View of Alitagtag Unit Office -->

        <TextView
            android:id="@+id/textViewAlitagtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alitagtag_unit_office"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewUnitOffices"
            android:textColor="@color/sage_green"
            android:fontFamily="@font/poppinsbold"
            android:justificationMode="inter_word"
            android:layout_marginStart="10dp">

        </TextView>

        <!-- Text View of Alitagtag Unit Office's Location -->

        <TextView
            android:id="@+id/textViewAlitagtagLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="158 Poblacion East, Alitagtag, Batangas"
            android:layout_below="@id/textViewAlitagtag"
            android:fontFamily="@font/poppinsmedium"
            android:justificationMode="inter_word"
            android:layout_marginStart="10dp">

        </TextView>

            <!-- Text View of Alitagtag Unit Office's Telephone Number -->

            <TextView
                android:id="@+id/textViewAlitagtagNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alitagtag_telnumber"
                android:layout_below="@id/textViewAlitagtagLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Alitagtag and Cuenca -->

            <View
                android:id="@+id/dividerAlitagtag"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewAlitagtagNumber"
                android:background="@android:color/darker_gray" />

            <!-- Text View of Cuenca Unit Office -->

            <TextView
                android:id="@+id/textViewCuenca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cuenca_unit_office"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dividerAlitagtag"
                android:textColor="@color/sage_green"
                android:fontFamily="@font/poppinsbold"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Cuenca Unit Office's Location -->

            <TextView
                android:id="@+id/textViewCuencaLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brgy. Emmanuel, Cuenca, Batangas"
                android:layout_below="@id/textViewCuenca"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Cuenca Unit Office's Telephone Number -->

            <TextView
                android:id="@+id/textViewCuencaNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cuenca_telnumber"
                android:layout_below="@id/textViewCuencaLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Line that divides Cuenca and Mabini -->

            <View
