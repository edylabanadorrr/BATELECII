                android:layout_below="@id/textViewSanJuan"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of San Juan Unit Office's Telephone Number -->

            <TextView
                android:id="@+id/textViewSanJuanNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sanjuan_telnumber"
                android:layout_below="@id/textViewSanJuanLocation"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
