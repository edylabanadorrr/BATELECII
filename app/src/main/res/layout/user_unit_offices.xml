                android:layout_below="@id/textViewTingloy"
                android:fontFamily="@font/poppinsmedium"
                android:justificationMode="inter_word"
                android:layout_marginStart="10dp">

            </TextView>

            <!-- Text View of Tingloy Unit Office's Telephone Number -->

            <TextView
                android:id="@+id/textViewTingloyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tingloy_celnumber"
