<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context=".UserOtherAccountsInterface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Head -->

    <TextView
        android:id="@+id/cooperative_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cooperative_name"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#a08b15"
        android:textSize="30sp"
        android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cooperative_name"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewUserIDHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="User ID"/>

            <!-- Shows the User ID -->

            <TextView
                android:id="@+id/textViewUserID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewUserIDHead"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/border"
                android:padding="10dp"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewAccountNumberHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textViewUserID"
                android:text="Account Number"/>

            <!-- Shows the User's Account Number -->

            <TextView
                android:id="@+id/textViewAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAccountNumberHead"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/border"
                android:padding="10dp"
                android:textColor="#555555"
                android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="40dp"
        android:layout_below="@id/textViewAccountNumber"
        android:background="@drawable/bill_radius_other_accounts"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_payment_24"
            android:layout_marginStart="40dp">
        </ImageView>

        <TextView
            android:id="@+id/myBillHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="My Bill"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsbold">

        </TextView>

        <TextView
            android:id="@+id/textViewPleasePay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Please pay your bills before January 05, 2024"
            android:layout_below="@id/myBillHead"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPleasePay"
            android:padding="20dp">

            <TextView
                android:id="@+id/myBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚± 0.00"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="@drawable/bill_amount"
                android:fontFamily="@font/poppinsmedium">

                </TextView>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>